{
  "include": [
    "src",
    "src/**/*",
    "dist/index.d.ts",
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "rootDir": "src",
    "outDir": "dist",
    "resolveJsonModule": true,
    "allowJs": true,
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "*": [
        "src/*",
        "node_modules/*",
      ]
    },
  }
}